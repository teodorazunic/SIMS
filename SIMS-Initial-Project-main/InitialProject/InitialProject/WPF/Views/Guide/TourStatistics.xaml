        <Rectangle HorizontalAlignment="Left" Height="346" Margin="476,318,0,0" Stroke="Black" VerticalAlignment="Top" Width="465"/>

        <!--<RadioButton Content="All years" HorizontalAlignment="Left" Margin="141,36,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>-->
        <ComboBox Name ="ComboBox" Margin="35,100,760,536" Loaded="Fill" SelectionChanged="ComboBox_SelectionChanged" FontSize="18"/>
        <lvc:PieChart Name= "name" Height="200" Width="200" Series="{Binding DataChart}" Margin="130,425,623,0" VerticalAlignment="Top"/>
        <lvc:PieChart Name= "name1" Height="200" Width="200" Series="{Binding DataChart1}" Margin="608,425,145,0" VerticalAlignment="Top"/>
        <Label Content="Choose a year:" HorizontalAlignment="Left" Margin="30,61,0,0" VerticalAlignment="Top" FontSize="18
               "/>
        <Label Content="Most visited tour:" HorizontalAlignment="Left" Margin="225,61,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Height="59" FontSize=" 18" Margin="75,342,0,0" TextWrapping="Wrap" Text="Choose a year for voucher statistics!" VerticalAlignment="Top" Width="294"/>
        <TextBlock HorizontalAlignment="Left" Height="59" FontSize=" 18" Margin="562,342,0,0" TextWrapping="Wrap" Text="Choose a year for age statistics!" VerticalAlignment="Top" Width="294"/>


