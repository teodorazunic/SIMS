<Window x:Class="InitialProject.WPF.Views.Guide.RequestStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Guide"
        mc:Ignorable="d"
        Title="RequestStatistics" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cbCity" HorizontalAlignment="Left" Margin="48,73,0,0" VerticalAlignment="Top" Width="120" Loaded="FillCity"/>
        <ComboBox x:Name="cbCountry" HorizontalAlignment="Left" Margin="223,73,0,0" VerticalAlignment="Top" Width="120" Loaded="FillCountry"/>
        <ComboBox x:Name="cbLanguage" HorizontalAlignment="Left" Margin="400,73,0,0" VerticalAlignment="Top" Width="120" Loaded="FillLanguage"/>
        <Button Content="Show Statistics" HorizontalAlignment="Left" Margin="168,161,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="cbYears" HorizontalAlignment="Left" Margin="588,73,0,0" VerticalAlignment="Top" Width="120" Loaded="Fill"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="110" Margin="91,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>

    </Grid>
</Window>
