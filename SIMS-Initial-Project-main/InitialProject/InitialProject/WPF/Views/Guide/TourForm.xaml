<Window x:Class="InitialProject.View.TourForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="Create new tour" Height="720" Width="1280">
    <Grid RenderTransformOrigin="0.455,0.513">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="627*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Tour name:" HorizontalAlignment="Left" Margin="258,92,0,0" VerticalAlignment="Top" Height="40" Width="104" FontSize="18"/>
        <Label Content="City:" HorizontalAlignment="Left" Margin="261,181,0,0" VerticalAlignment="Top" Height="40" Width="105" FontSize="18"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="261,487,0,0" VerticalAlignment="Top" Height="40" Width="203" FontSize="18"/>
        <Label Content="Language:" HorizontalAlignment="Left" Margin="261,272,0,0" VerticalAlignment="Top" Height="40" Width="143" FontSize="18"/>
        <Label Content="Max guests:" HorizontalAlignment="Left" Margin="499,272,0,0" VerticalAlignment="Top" Height="40" Width="136" FontSize="18"/>
        <Label Content="Key points:" HorizontalAlignment="Left" Margin="713,86,0,0" VerticalAlignment="Top" Height="40" Width="113" FontSize="18" RenderTransformOrigin="0.474,0.131"/>
        <Label Content="Date:" HorizontalAlignment="Left" Margin="713,370,0,0" VerticalAlignment="Top" Height="40" Width="100" FontSize="18"/>
        <Label Content="Duration:" HorizontalAlignment="Left" Margin="497,372,0,0" VerticalAlignment="Top" Height="40" Width="169" FontSize="18"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="265,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="40" FontSize="18"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Margin="265,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40" FontSize="18"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="267,529,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="40" FontSize="18"/>
        <TextBox x:Name="txtLanguage" HorizontalAlignment="Left" Margin="265,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40" FontSize="18"/>
        <TextBox x:Name="txtMaxGuests" HorizontalAlignment="Left" Margin="500,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40"/>
        <TextBox x:Name="txtKeyPoint" HorizontalAlignment="Left" Margin="713,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="40" FontSize="18"/>
        <TextBox x:Name="txtDuration" HorizontalAlignment="Left" Margin="501,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40" FontSize="18"/>
        <Button Content="SAVE TOUR" HorizontalAlignment="Center" Margin="0,602,0,0" VerticalAlignment="Top" Height="43" Width="154" RenderTransformOrigin="1.187,0.918" Click="Button_Click" FontSize="20"/>
        <TextBox x:Name="txtCountry" HorizontalAlignment="Left" Margin="494,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40"/>
        <Label Content="Image:" HorizontalAlignment="Left" Margin="265,372,0,0" VerticalAlignment="Top" Height="38" Width="107" FontSize="18"/>
        <TextBox x:Name="txtImage" HorizontalAlignment="Left" Margin="265,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="40" FontSize="18"/>
        <DatePicker x:Name="datePicker1" HorizontalAlignment="Left" Margin="713,411,0,0" VerticalAlignment="Top" Height="40" Width="230" FontSize="20"/>
        <Button Content="Add key point" HorizontalAlignment="Left" Margin="999,122,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="40" Width="140" FontSize="18"/>

        <Label Content="CREATE NEW TOUR" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="70" Width="332" FontSize="36"/>
        <Image Source ="/Resources/Images/logo1.png" HorizontalAlignment="Left" Height="72" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.6"/>
        <Rectangle HorizontalAlignment="Left" Height="627" Margin="0,77,0,0" Stroke="Black" VerticalAlignment="Top" Width="208"/>
        <Label Content="Country:" HorizontalAlignment="Left" Margin="494,181,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ListBox Name="KeyPointsList" Margin="719,220,295,339" FontSize="18" />
        <Label Content="Added key points:" HorizontalAlignment="Left" Margin="713,181,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ListBox x:Name="KeyPointsList_Copy" Margin="717,509,297,133" FontSize="18" />
        <Label Content="Dates you added:" HorizontalAlignment="Left" Margin="717,467,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="SuccessfulTour" HorizontalAlignment="Left" Margin="837,589,0,80" FontSize="16" Width="272"/>
        <!--<Rectangle HorizontalAlignment="Left" Height="627" Margin="241,77,0,0" Stroke="Black" VerticalAlignment="Top" Width="942"/>-->
    </Grid>
</Window>
