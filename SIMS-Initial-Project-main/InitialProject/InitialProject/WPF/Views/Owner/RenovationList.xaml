<Window x:Class="InitialProject.WPF.Views.Owner.RenovationList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Owner"
        mc:Ignorable="d"
        Title="RenovationList" Height="768" Width="1024">
    <Grid>
        <DataGrid x:Name="DataPanel" AutoGenerateColumns="False" Margin="53,40,47,280" Loaded="OnLoad">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Renovation Id" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="  From" Binding="{Binding StartDate}" Width="*" />
                <DataGridTextColumn Header="To" Binding="{Binding EndDate}" Width="*" />




                <!-- Add more columns as needed -->
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="371,556,0,0" VerticalAlignment="Top" Height="40" Width="288" Click="CancelRenovation"/>
    </Grid>
</Window>
