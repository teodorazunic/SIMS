<Window x:Class="InitialProject.WPF.Views.Owner.ForumPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Owner"
        mc:Ignorable="d"
        Title="ForumPage" Height="450" Width="800">
    <Grid>
        <Button Click="ShowAllForums" Content="Show Forums" Height="30" Margin="154,332,154,72"  />

        <DataGrid AutoGenerateColumns="False" SelectionMode="Single" SelectedItem="{Binding Selected}" MouseDoubleClick="OnForumClick"  Margin="10,10,10,129" x:Name="ForumsList" Loaded="OnLoad" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Question" Binding="{Binding Question}" Width="200"/>
                <DataGridTextColumn Header="City" Binding="{Binding Location.City}" Width="*"/>
                <DataGridTextColumn Header="Country" Binding="{Binding Location.Country}" Width="*"/>
                <DataGridTextColumn Header="Is Very Userful" Binding="{Binding IsVeryUseful}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
