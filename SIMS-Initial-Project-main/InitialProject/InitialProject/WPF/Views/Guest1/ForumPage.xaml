<Window x:Class="InitialProject.WPF.Views.Guest1.ForumPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Guest1"
        mc:Ignorable="d"
        Title="ForumPage" Height="750" Width="800">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Forum"  TextAlignment="Center" FontSize="22" FontWeight="DemiBold" />
            <TextBlock Margin="15,8,0,0" Text="- very useful" Visibility="{Binding Forum.IsVeryUseful, Converter={StaticResource BooleanToVisibility}}" />
        </StackPanel>

        <StackPanel Visibility="{Binding IsUserFormCreator, Converter={StaticResource BooleanToVisibility}}" Grid.Row="1" HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0,0,10,0">
            <Button Click="CloseForum" Content="Close forum" Height="30" HorizontalAlignment="Right" Visibility="{Binding Forum.IsDeleted, Converter={StaticResource BooleanToVisibility}, ConverterParameter=Inverse}" />
            <TextBlock Text="Forum closed" HorizontalAlignment="Right" Visibility="{Binding Forum.IsDeleted, Converter={StaticResource BooleanToVisibility}}"></TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="15,0,0,0" VerticalAlignment="Center">
            <TextBlock Text="Location: " FontWeight="DemiBold" />
            <TextBlock Text="{Binding Forum.Location.StringFormat}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="15,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="Question: " FontWeight="DemiBold" />
            <TextBlock Text="{Binding Forum.Question}" />
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="15,0,0,0" Visibility="{Binding Forum.IsDeleted, Converter={StaticResource BooleanToVisibility}, ConverterParameter=Inverse}">
            <TextBlock Text="Leave a comment:"  />
            <TextBox Text="{Binding Comment}" Height="100" Width="500" Margin="0,10,0,0" />
            <Button Margin="0,10,0,0" Click="AddComment" Content="Save" HorizontalAlignment="Right" Width="80" Height="30" />
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Margin="10,0,0,0" >
            <TextBlock Text="Comments:" FontSize="16" />


            <DataGrid CanUserAddRows="false" Margin="0,10,0,0" Grid.Row="5" Grid.ColumnSpan="2"  x:Name="Comments" HeadersVisibility="None" Loaded="OnLoad" AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*" Header="">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock FontSize="14"  Text="{Binding DateCreated,  StringFormat=dd. MMM yyyy.}" />
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock FontWeight="ExtraBold"  Text="{Binding Username}" FontSize="14" />
                                    </StackPanel>
                                    <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="DemiBold" Text="{Binding CommentText}" />
                                    <TextBlock HorizontalAlignment="Right" Text="Special comment" FontWeight="DemiBold" Visibility="{Binding IsSpecialGuestComment, Converter={StaticResource BooleanToVisibility}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
