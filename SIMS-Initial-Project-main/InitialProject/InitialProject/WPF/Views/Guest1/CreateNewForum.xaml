<Window x:Class="InitialProject.WPF.Views.Guest1.CreateNewForum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Guest1"
        mc:Ignorable="d"
        Title="CreateNewForum" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Height="30">Location:</Label>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="Locations" DisplayMemberPath="StringFormat" SelectedIndex="{Binding LocationIndex}" Height="25" Width="200" VerticalAlignment="Center"  />

        <Label Grid.Row="1" Grid.Column="0" Height="30">Question:</Label>
        <TextBox Margin="10,0,10,0" x:Name="Question" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"
                     Text="{Binding ForumQuestion}"  Height="100"/>

        <Button Content="Save" Click="Save" Grid.Row="2" Grid.ColumnSpan="2" Height="40" Width="80" />
    </Grid>
</Window>


